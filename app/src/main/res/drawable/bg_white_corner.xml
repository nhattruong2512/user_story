<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E8E8E8" /> <!-- Semi-transparent shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Foreground Layer -->
    <item android:left="2dp" android:top="0dp" android:right="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>